@page "/login"
@inject SupabaseService Supabase
@inject SupabaseAuthStateProvider AuthStateProvider
@inject NavigationManager Nav

<PageTitle>@(_isSignUp ? "Create Account" : "Sign In") ‚Äî NineWest</PageTitle>

<div class="auth-wrapper">
    <div class="auth-card">
        <div class="auth-header">
            <span class="auth-icon">üè†</span>
            <h1>NineWest</h1>
            <p>@(_isSignUp ? "Create your account" : "Welcome back")</p>
        </div>

        @if (_signUpSuccess)
        {
            <div class="alert alert-success">
                <strong>Account created!</strong> Check your email to confirm your account, then sign in.
            </div>
            <button class="btn btn-primary w-100" @onclick="() => { _isSignUp = false; _signUpSuccess = false; }">
                Go to Sign In
            </button>
        }
        else
        {
            @if (_errorMessage is not null)
            {
                <div class="alert alert-danger">@_errorMessage</div>
            }

            <EditForm Model="_form" OnValidSubmit="HandleSubmit">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <InputText @bind-Value="_form.Email" class="form-control" type="email"
                               placeholder="you@example.com" autocomplete="email" />
                    <ValidationMessage For="() => _form.Email" />
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <InputText @bind-Value="_form.Password" class="form-control" type="password"
                               placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢"
                               autocomplete="@(_isSignUp ? "new-password" : "current-password")" />
                    <ValidationMessage For="() => _form.Password" />
                </div>

                <button type="submit" class="btn btn-primary w-100" disabled="@_loading">
                    @if (_loading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status" />
                    }
                    @(_isSignUp ? "Create Account" : "Sign In")
                </button>
            </EditForm>

            <div class="auth-switch">
                @if (_isSignUp)
                {
                    <span>Already have an account? </span>
                    <button class="btn btn-link p-0" @onclick="() => { _isSignUp = false; _errorMessage = null; }">Sign in</button>
                }
                else
                {
                    <span>Don't have an account? </span>
                    <button class="btn btn-link p-0" @onclick="() => { _isSignUp = true; _errorMessage = null; }">Create one</button>
                }
            </div>
        }
    </div>
</div>

@code {
    private readonly LoginForm _form = new();
    private bool _isSignUp;
    private bool _loading;
    private bool _signUpSuccess;
    private string? _errorMessage;

    protected override void OnInitialized()
    {
        if (Supabase.IsAuthenticated)
            Nav.NavigateTo("/shopping-list");
    }

    private async Task HandleSubmit()
    {
        _loading = true;
        _errorMessage = null;

        try
        {
            if (_isSignUp)
            {
                await Supabase.SignUpAsync(_form.Email, _form.Password);
                _signUpSuccess = true;
            }
            else
            {
                var session = await Supabase.SignInAsync(_form.Email, _form.Password);
                if (session is not null)
                {
                    AuthStateProvider.NotifyAuthStateChanged();
                    Nav.NavigateTo("/shopping-list");
                }
            }
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
        }
        finally
        {
            _loading = false;
        }
    }

    private sealed class LoginForm
    {
        [Required(ErrorMessage = "Email is required")]
        [EmailAddress(ErrorMessage = "Enter a valid email address")]
        public string Email { get; set; } = string.Empty;

        [Required(ErrorMessage = "Password is required")]
        [MinLength(6, ErrorMessage = "Password must be at least 6 characters")]
        public string Password { get; set; } = string.Empty;
    }
}
